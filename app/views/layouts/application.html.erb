<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="header">
      <%= link_to 'My Blog', root_path, class: 'logo' %>
      
      <div>
        <% if user_signed_in? %>
        <%= link_to 'New Post', new_post_path, class: 'link' %>
        <% else %>
        <%= link_to 'Admin Login', new_user_session_path, class: 'link' %>
        <% end %>
      </div>

    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
