<p id="notice"><%= notice %></p>
<div class="main-body">
  
  <h1><%= @post.title %></h1>
  <h3><%= @post.body %></h3>
  <% if user_signed_in? %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Remove', @post, method: :delete, data: { confirm: 'Are you sure?'} %> |
  <% end %>
  <%= link_to 'Back', posts_path %>
  
</div>
